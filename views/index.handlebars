<header>
<div class="topnav">
    <img src="images/favicon.png">
  <a href="/" class="active">Home</a>
  
  {{#if user}}

  <a href="/logout"> Log Out </a>
  <a href="/shopping-cart"> Shopping Cart <span>{{session.cart.totalQty}}</span></a>
  <a href="/profile"> Dashboard </a>

  {{else}}

  <a href="/login">Login</a>
  <a href="/registration">Register</a>

  {{/if}}

  <a href="/products">Products</a>
</div>
</header>

<div class="banner">
  <img src="images/salebanner.png">
</div>

<div class="bestsellers">
  <h1 id="bestsellersheading"> Best Sellers </h1>



   {{#each bestSeller}}
        <div class="card">
            <img src="uploads/{{this.productPic}}">
            <h1>{{this.title}}</h1>
            <p class="price">${{this.price}}</p>
            <p>{{this.description}}</p>
            <a href="/add-to-cart/{{this.id}}"><p><button>Add to Cart</button></p></a>
        </div>
  {{/each}}

    

</div>

